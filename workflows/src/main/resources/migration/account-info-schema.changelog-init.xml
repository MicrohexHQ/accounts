<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="R3.Corda" id="create_account_info_table_id">
        <createTable tableName="accounts">
            <column name="identifier" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="host" type="NVARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="R3.Corda" id="accounts_pkey_id">
        <addPrimaryKey columnNames="id" constraintName="accounts_pkey" tableName="accounts"/>
    </changeSet>

    <changeSet author="R3.Corda" id="accounts_id_idx_id">
        <createIndex indexName="accounts_id_idx" tableName="accounts">
            <column name="identifier"/>
        </createIndex>
    </changeSet>

    <changeSet author="R3.Corda" id="accounts_host_idx_id">
        <createIndex indexName="accounts_host_idx" tableName="accounts">
            <column name="host"/>
        </createIndex>
    </changeSet>

    <changeSet author="R3.Corda" id="accounts_name_idx_id">
        <createIndex indexName="accounts_name_idx" tableName="accounts">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet author="R3.Corda" id="accounts_uniq_name_host_id">
        <addUniqueConstraint columnNames="host, name" constraintName="uniq_host_name" tableName="accounts"/>
    </changeSet>

</databaseChangeLog>